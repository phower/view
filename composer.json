{
    "name": "phower/view",
    "description": "Standalone templating system for PHP scripts.",
    "type": "library",
    "require": {
        "php": "^5.6 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^2.8",
        "symfony/var-dumper": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Phower\\View\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhowerTest\\View\\": "tests/"
        }
    },
